<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/lato_black"
        android:text="Result"
        android:textColor="#000"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/result_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/lato_bold"
        android:maxWidth="220dp"
        android:textSize="24sp"
        tools:text="Normal\n(18 - 25) BMI" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/result_bg"
        android:backgroundTint="@color/colorAccent"
        android:minWidth="112dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="5dp">

        <TextView
            android:id="@+id/bmi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/lato_black"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="42sp"
            tools:text="20.3" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#D50000"
            android:layout_marginBottom="2dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FF6D00"
            android:layout_marginBottom="2dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFD600"
            android:layout_marginBottom="2dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00C853"
            android:layout_marginBottom="2dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFD600"
            android:layout_marginBottom="2dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FF6D00"
            android:layout_marginBottom="2dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#D50000"/>

    </LinearLayout>

    <TextView
        android:id="@+id/weight_and_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/lato_bold"
        android:maxWidth="220dp"
        android:textSize="24sp"
        tools:text="Weight: 100kg\nHeight: 190cm"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:lineSpacingMultiplier="1.4"/>

    <View
        android:id="@+id/arrow"
        android:layout_marginEnd="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="5dp"
        android:background="@drawable/ic_forward_black_24dp"
        android:backgroundTint="#000000"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>